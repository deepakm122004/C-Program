VIVA ON ODD NUMBERS
#include <stdio.h>

int main() {
    int num, correct_odd_count = 0;
    float score = 0.0;

    printf("Enter the numbers\n");

    while (correct_odd_count < 3) {
        scanf("%d", &num);
        printf("%d\n", num);

        if (num < 0) {
            score -= 1.0;
            break;
        } else if (num % 2 != 0) {
            score += 1.0;
            correct_odd_count++;
        } else {
            score -= 0.5;
        }
    }

    printf("%.1f\n", score);
    return 0;
}
