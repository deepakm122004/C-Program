Shape Calculation-Area
#include <stdio.h>
#define PI 3.1416

int main() {
    int side, length, breadth, radius, base, height;
    int areaSquare, areaRectangle, areaTriangle;
    float areaCircle;
    scanf("%d", &side);
    scanf("%d", &length);
    scanf("%d", &breadth);
    scanf("%d", &radius);
    scanf("%d", &base);
    scanf("%d", &height);
    areaSquare = side * side;
    areaRectangle = length * breadth;
    areaCircle = PI * radius * radius;
    areaTriangle = (base * height) / 2;
    printf("Area of Square=%d\n", areaSquare);
    printf("Area of Rectangle=%d\n", areaRectangle);
    printf("Area of Circle=%.2f\n", areaCircle);
    printf("Area of Triangle=%d\n", areaTriangle);

    return 0;
}
