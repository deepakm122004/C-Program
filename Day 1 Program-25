Mark Calculation
#include <stdio.h>

int main() {
    char name[100];
    int mark1, mark2, mark3, mark4, mark5;
    scanf("%s", name);
    scanf("%d", &mark1);
    scanf("%d", &mark2);
    scanf("%d", &mark3);
    scanf("%d", &mark4);
    scanf("%d", &mark5);

    int total = mark1 + mark2 + mark3 + mark4 + mark5;
    float average = total / 5.0;
    printf("Name of the Student:%s\n", name);
    printf("Total marks:%d\n", total);
    printf("Average marks:%.1f\n", average);
    
    return 0;
}
